<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.swdec.paxan"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m">
        <activity android:name=".BibleActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swdec.paxan.MainActivity" />
        </activity>
        <activity
            android:name=".SpeakerDetailActivity"
            android:label="@string/speaker_detail_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swdec.paxan.MainActivity" />
        </activity>
        <activity
            android:name=".SeminarDetailActivity"
            android:label="@string/seminar_detail_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swdec.paxan.MainActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/info_about">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swdec.paxan.MainActivity" />
        </activity>
        <activity
            android:name=".QuartersActivity"
            android:label="@string/info_quarters">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swdec.paxan.MainActivity" />
        </activity>
        <activity
            android:name=".SeminarsActivity"
            android:label="@string/info_seminars">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swdec.paxan.MainActivity" />
        </activity>
        <activity
            android:name=".SpeakersActivity"
            android:label="@string/info_speakers">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swdec.paxan.MainActivity" />
        </activity>
        <activity
            android:name=".SetupActivity"
            android:theme="@style/AppThemeSettings" />
        <activity
            android:name=".settings.SettingsPlanActivity"
            android:theme="@style/AppThemeSettings" />
        <activity
            android:name=".settings.SettingsNameActivity"
            android:theme="@style/AppThemeSettings" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_android_map_api_key" />

        <activity
            android:name=".DictionaryActivity"
            android:label="@string/title_dictionary">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swdec.paxan.MainActivity" />
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop" />
    </application>

</manifest>